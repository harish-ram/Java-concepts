{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Java Project",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "src/models/*.java",
                "src/utilities/*.java",
                "src/concurrency/*.java",
                "src/data/*.java",
                "src/services/*.java",
                "src/gui/*.java",
                "src/web/*.java",
                "src/tools/*.java",
                "src/javax/persistence/*.java",
                "src/main/Main.java",
                // include small test runners (exclude JUnit tests to avoid missing junit on classpath)
                "src/test/BrandFilterTestRunner.java",
                "src/test/JdbcDaoTestRunner.java",
                "src/test/SimpleTestRunner.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$javac"
        }
    ]
}
